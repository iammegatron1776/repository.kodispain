<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.freshstart" name="Fresh Start"
	version="1.0.5" provider-name="tvaddons.ag">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Factory Restore Functionality for Kodi</summary>
    <description lang="en">Easily Factory Restore your Kodi Configuration in One Simple Click! This tool will bring your Kodi back to its original installation state, deleting all customizations and add-ons you may have previously enabled, giving you a fresh start!</description>
    <platform>all</platform>
    <forum>http://forums.tvaddons.ag/forums/141-FRESH-START</forum>
    <website>http://www.tvaddons.ag/</website>
  </extension>
</addon>

<addon id="plugin.video.kodispainbuild" name="Kodispain Build" version="0.3" provider-name="www.konectas.es">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
		<summary lang="en">Build exclusivo para grupo Telegram Kodispain</summary>
		<description lang="en">Instalador del build </description>
		<disclaimer lang="en"></disclaimer>
		<platform>all</platform>
	</extension>
</addon>

<addon id="repository.kodispain" name="kodispain repository" version="1.0" provider-name="joheos11">
	<extension point="xbmc.addon.repository" name="KodiSpain repository">
		<info compressed="false">https://raw.githubusercontent.com/joheos11/repository.kodispain/master/addons.xml</info>
